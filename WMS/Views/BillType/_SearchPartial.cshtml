<script type="text/javascript">

    function searchClick() {
        $('#Search_BType').combobox({
            url: "/SysTableState/Details/?TableName=CMD_BILL_TYPE&FieldName=BILL_TYPE",
            valueField: 'id',
            textField: 'text'
        });
        $('#Search_BType').combobox('setValue', '')
        $('#TASK_LEVEL').combobox('setValue', '');
        $('#dlg-search').dialog('open').dialog('setTitle', '查询');
    };

    function Sselect() {
        var queryParams = $('#details').datagrid('options').queryParams;
        queryParams.BTYPE_NAME = $('#BTYPE_NAME').val();
        queryParams.BILL_TYPE = $('#Search_BType').combobox('getValue');
        queryParams.TASK_LEVEL = $('#TASK_LEVEL').combobox('getValue');
        queryParams.MEMO = $('#MEMO').val();
        $('#details').datagrid('options').queryParams = queryParams;
//        $('#details').datagrid({
//            pageNumber: 1,
//            pageSize: 10
//        });
        $('#details').datagrid('reload');
        $('#dlg-search').dialog('close');
    }

</script>

