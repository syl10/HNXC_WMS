<script type="text/javascript">
    function deleteClick() {
        clickbt = "delete";
        var row = $('#details').datagrid('getSelected');
        //        index = $('#details').datagrid('getRowIndex', row);
        if (row) {
            if (row.STATE == "1") {
                $('#dlg').dialog('open').dialog('setTitle', '删除');
                $('#fm').form('clear');
                loaddata(row.BILL_NO);
                $('#BILL_DATE').datebox({
                    width: 135,
                    hasDownArrow: true,
                    required: true
                });
                $('#OPERATE_DATE').datebox({
                    width: 135,
                    hasDownArrow: true,
                    required: true
                });
                GetBillType(); //单据类型
                GetWarehouseCode();  //仓库编号
                $('#fm').form('load', row);
            }
            else {
                alert("该记录已" + row.STATENAME + "不能删除");
            }
        }
        else {
            alert('没有选择行！');
        }
    }
</script>

