      var PrintCount=0;
    function loadpdf(BILLNO,BILLDATEFROM,BILLDATETO,BTYPECODE,BILLMETHOD,STATE,CIGARETTECODE,FORMULACODE) {
        PrintCount = PrintCount + 1;
