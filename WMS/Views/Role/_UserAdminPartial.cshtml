<script type="text/javascript">
    var roleId;
    var roleName;
    $(function () {
        $('#UserAdminAdd').window({
            width: 500,
            modal: true,
            shadow: false,
            closed: true,
            height: 350,
            resizable: false,
            minimizable: false,
            maximizable: false,
            collapsible: false
        });
    });

    //加载
    function useradminClick() {
        var row = $('#details').datagrid('getSelected');
        if (row) {
            $('#UserAdminAdd').window('open');
            $('#RoleUserDataGrid').datagrid('clearSelections'); //清空所有选择项
            $('#UserAdminAdd').dialog('open').dialog('setTitle', "角色用户编辑：" + row.ROLE_NAME);
            roleId = row.ROLE_ID;
            roleName = row.ROLE_NAME;
            $('#RoleUserDataGrid').datagrid({
                url: '/Role/GetRoleUser/?ROLE_ID=' + row.ROLE_ID
            });
        } else {
            $('#UserAdminAdd').window('close');
            $.messager.show({ title: '系统提示', msg: '请选择角色！' });
        }
    }

    //添加用户
    function RoleUserAddClick() {
        
        $('#RoleAddUser').dialog('open').dialog('setTitle', "角色添加用户：" + ROLE_NAME);
        $('#RoleAddUserDatagrid').datagrid({
            url: '/Role/GetUserInfo/?ROLE_ID=' + roleId
        });
        $('#RoleAddUserDatagrid').datagrid('clearSelections'); //清空所有选择项
    }

    //删除用户
    function RoleUserDeleteClick() {
        var row = $('#RoleUserDataGrid').datagrid('getSelections');
        if (row.length > 0) {
        $.messager.confirm('确认','你确认要删除这个用户吗？',function(r){
            if (r) {
            var roleUserString = "";
            for (var i = 0; i < row.length; i++) {
                roleUserString += row[i].USER_ROLE_ID + ",";
            }
            $.post("/Role/DeleteRoleUser/", { roleUserIdStr: roleUserString }, function (json) {
                if (json) {
                    $.messager.show({ title: '系统提示', msg: '删除成功！' });
                    $('#RoleUserDataGrid').datagrid('options').url = '/Role/GetRoleUser/?ROLE_ID=' + roleId;
                    $('#RoleUserDataGrid').datagrid('reload');
                    $('#RoleUserDataGrid').datagrid('clearSelections'); //清空所有选择项
                } else {
                    $.messager.show({ title: '系统提示', msg: '删除失败!请检查原因！' });
                }
            });
        }
            });
        } else {
            $.messager.show({ title: '系统提示', msg: '请选择要删除的数据！' });
        }
    }
</script>
<div id="UserAdminAdd" split="true">
    <table id="RoleUserDataGrid" class="easyui-datagrid" border="0px" fit="true" idfield="USER_ROLE_ID" toolbar="#tb" rownumbers="true" fitColumns="true">
        <thead>
            <tr>
                <th field="ck" checkbox="true"></th>
                <th field="USER_ROLE_ID" width="80" hidden="true">角色用户编码</th>
                <th field="USER_ID" width="120" hidden="true">用户编码</th>
                <th field="ROLE_ID" width="80" hidden="true">角色编码</th>
                <th field="ROLE_NAME" width="150" hidden="true">角色名称</th>
                <th field="USER_NAME" width="480">用户名称</th>
            </tr>
        </thead>
    </table>
    <div id="tb">
        <a href="#" class="easyui-linkbutton" iconcls="icon-add" plain="true" onclick="RoleUserAddClick()" id="RoleUserAddButton">添加</a> 
        <a href="#" class="easyui-linkbutton" iconcls="icon-remove" plain="true" onclick="RoleUserDeleteClick()" id="RoleUserDeleteButton">删除</a>
    </div>
</div>
@Html.Partial("_RoleUserPartial")
