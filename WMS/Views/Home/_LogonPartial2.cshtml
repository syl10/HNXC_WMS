                        if (data) {
                            location.href = data2.data;
                        }
                    });
                    isloginsuccess = 1;
                }
                else {
                    $.messager.confirm('系统提示', data2.msg, function (r) {
                        if (r) {
                            location.href = '/Account/LogOff';
                        }
                    });
                    isloginsuccess = 0;
                }
            }
        });
    }
    function login() {
        $('#fm-logon').form('submit', {
            onSubmit: function () {
                return $(this).form('validate');
            },
            success: function (result) {
                var result = eval('(' + result + ')');
                islogin(result);
            }
        });
    }
    function login2() {
        var userName = document.getElementById('username').value;
        var datas = true;
        $.getJSON('/User/UpdateUserInfo/?userName=' + userName, function (data) {
            if (data) {
                datas = true;
            }
        });
        $('#fm-logon').form('submit', {
            onSubmit: function () {
                return $(this).form('validate');
            },
            success: function (result) {
                if (datas) {
                    var result = eval('(' + result + ')');
                    if (result.success) {
                        $.messager.show({
                            title: '成功',
                            msg: result.msg
                        });
                        s = true;
                        $('#dlg-changepassword').dialog('close');
                        location.href = result.data;
                        isloginsuccess = 1;
                    }
                    else {
                        isloginsuccess = 0;
                    }
                }
            }
        });
    }
