<script type="text/javascript">
    var url;
    function AddLoad() {
        $('#cc').combo({
            required: true,
            editable: false,
            panelHeight: 45
        });
        
        $('#cg').combogrid({
            required: true,
            width: 120,
            panelWidth: 450,
            url: '/City/Details/?page=1&rows=1000',
            idField: 'CITY_ID',
            textField: 'CITY_NAME',
            mode: 'local',
            editable: false,
            fitColumns: true,
            columns: [[
					{ field: 'CITY_ID', title: '地市编码', hidden: true, width: 30 },
					{ field: 'CITY_NAME', title: '地市名称', align: 'left', width: 40 },
					{ field: 'DESCRIPTION', title: '备注', align: 'left', width: 30 },
					{ field: 'IS_ACTIVE', title: '状态', align: 'left', width: 30 }
				]]
        });
    }

    function addClick() {
        AddLoad();
        $('#dlg').dialog('open').dialog('setTitle', '新增');
        $('#fm').form('clear');
        $('#fm .easyui-validatebox').validatebox({
            required: true
        });
        $('form input').removeAttr("disabled");
        $('form textarea').removeAttr("disabled");
        $('#cc').combo({
            hasDownArrow: true
        });
        $('#cg').combo({
            hasDownArrow: true
        });
        url = '/Server/Create/';
    };

    function save() {
   
        $('#fm').form('submit', {
            url: url,
            onSubmit: function () {
                return $(this).form('validate');
            },
            success: function (result) {
                var result = eval('(' + result + ')');
                if (result.success) {
                    $.messager.show({
                        title: '成功',
                        msg: result.msg
                    });
                    $('#dlg').dialog('close');
                    $('#details').datagrid('reload');
                } else {
                    $.messager.show({
                        title: '错误',
                        msg: result.msg
                    });
                    $('#details').datagrid('reload');
                }
            }
        });
    }
</script>

    <div id="dlg" class="easyui-dialog" modal="true" 
        style="width:320px;height:280px;padding:2px 2px"
        closed="true" buttons="#dlg-buttons">
		<div class="easyui-layout" fit="true">
			<div region="center" border="false" style="padding:10px 10px;background:#fff;border:1px solid #ccc; " >     
	            <form id="fm" method="post" novalidate>
                    <table>
                      <tr>
                        <td width="80">服务器名称</td>
                        <td width="168"><input name="SERVER_NAME" class="easyui-validatebox" required="true"></td>
                      </tr>
                      <tr>
                        <td>地市</td>
                        <td><input id="cg" name="CITY_CITY_ID" type="text"/></td>
                      </tr>
                      <tr>
                        <td>URL</td>
                        <td><input name="URL" type="text" class="easyui-validatebox" required="true"/></td>
                      </tr>
                      <tr>
                        <td>备注</td>
                        <td><textarea name="DESCRIPTION" style="width: 180px; height: 50px"></textarea></td>
                      </tr>
                      <tr>
                        <td>状态</td>
                        <td><select id="cc" name="IS_ACTIVE" class="easyui-combobox" style="width: 50px">
		                        <option value="1">启用</option>
		                        <option value="0">禁用</option>
	                        </select>
	                    </td>
                      </tr>
                    </table>
	            </form>
            </div>
        </div>
    </div>
<div id="dlg-buttons">
@*	<a href="#" class="easyui-linkbutton" iconCls="icon-ok" onclick="save()">确定</a>
	<a href="#" class="easyui-linkbutton" iconCls="icon-cancel" onclick="javascript:$('#dlg').dialog('close')">取消</a>*@
      <input type="button"  onclick="save()"  onmouseover="btmouseup(this)" onmouseout="btmouseout(this)"  class="btok" value="确定"/>
       <input type="button"  onclick="javascript:$('#dlg').dialog('close')" onmouseover="btmouseup(this)" onmouseout="btmouseout(this)"  class="btcance" value="取消"/>
</div>
