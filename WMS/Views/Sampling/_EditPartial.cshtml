<script type="text/javascript">
    function editClick() {
        clickbt = "edit";
        var row = $('#details').datagrid('getSelected');
        //        index = $('#details').datagrid('getRowIndex', row);
        if (row) {
            if (row.STATE == "1") {
                $('#dlg').dialog('open').dialog('setTitle', '编辑');
                $('#fm').form('clear');
                loaddata(row.BILL_NO);
                $('#BILL_DATE').datebox({
                    width: 135,
                    hasDownArrow: true,
                    required: true
                });
                $('#OPERATE_DATE').datebox({
                    width: 135,
                    hasDownArrow: true,
                    required: true
                });
                //                $('#SOURCE_BILLNO').attr('readonly', true);
                GetBillType(); //单据类型
                GetWarehouseCode();  //仓库编号
                $('#fm').form('load', row);
                $('#SOURCE_BILLNO').val(row.SOURCE_BILLNO);
                setbtdisable();
            }
            else {
                alert("该记录已" + row.STATENAME + "不能修改");
            }
        }
        else {
            alert('没有选择行!');
        }
    }
    //加载该计划单的明细.
    function loaddata(Bill_NO) {
        $('#inBillDetail').datagrid('loadData', { total: 0, rows: [] });
        $('#inBillDetail').datagrid({ url: '/FillBill/GetSubDetail/?page=1&rows=20000&BillNo=' + Bill_NO });
    }
</script>
