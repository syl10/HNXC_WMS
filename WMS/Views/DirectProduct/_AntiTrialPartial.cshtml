<script type="text/javascript">
    //反审页面
    function antitrialClick() {
        var row = $('#details').datagrid('getSelected');
        if (row) {
            if (row.STATE == "2") {
                $.messager.confirm('提示', '确定要反审该记录?', function (r) {
                    if (r) {
                        $.getJSON("/DirectProduct/Antitrial/?billno=" + row.BILL_NO, function (result) {
                            if (result) {
                                if (result.success) {
                                    $.messager.show({
                                        title: '成功',
                                        msg: result.msg
                                    });
                                    $('#details').datagrid('reload');
                                } else {
                                    $.messager.show({
                                        title: '错误',
                                        msg: result.msg
                                    });
                                    $('#details').datagrid('reload');
                                }
                            }
                        });
                    }
                });
            }
            else {
                alert( '该记录还未审核无法反审！');
            }
        }
        else {
            alert( '没有选择行！');
        }
    }
</script>

